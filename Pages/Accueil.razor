@page "/accueil"
@inject NavigationManager UriHelper

<div class="title">
    <img src="/img/Tetris_Title.png">
</div>

<div class="phone_outline">
    <img class="phone" src="/img/iphone_x.png">
    <div class="background">
        <img class="background_b" src="/img/background.png">
        <div class="play">
            <a @onclick="normalSpeedGame"><img class="play_b" src="/img/PlayBtn.png"></a>
        </div>
        <div class="option">
            <a href="/option"><img class="option_b" src="/img/OptionBtn.png"></a>
        </div>
        <div class="credit">
            <a href="/credit"><img class="credit_b" src="/img/CreditBtn.png"></a>
        </div>
    </div>
</div>

@code {
    private void normalSpeedGame(){
        UriHelper.NavigateTo($"/game/{1500}");
    }
}